@{
    ViewData["Title"] = "Home";
}

<!-- Featured shows -->
<section class="featured-shows mx-52 my-20">
    <div class="flex items-center">
        <img src="images/Video Icon.png" alt="Video icon" class="video-icon">
        <h1 class="text-6xl font-extrabold ml-10">Featured Shows</h1>
    </div>
    <div class="table-filters flex items-center justify-between my-5 px-16 py-8">
        <div class="filters flex gap-20">
            <div class="filter flex justify-between">
                <div>
                    <p class="font-semibold text-2xl mb-1">Duration</p>
                    <p class="font-thin text-xl">Select</p>
                </div>
                <img src="images/arrow.svg" alt="arrow icon" class="ml-44">
            </div>
            <div class="filter flex justify-between">
                <div>
                    <p class="font-semibold text-2xl mb-1">Rating</p>
                    <p class="font-thin text-xl">Select</p>
                </div>
                <img src="images/arrow.svg" alt="arrow icon" class="ml-44">
            </div>                
        </div>
        <div class="sort">
            <div class="filter flex justify-between">
                <div>
                    <p class="font-semibold text-2xl mb-1">Sort By</p>
                    <p class="font-thin text-xl">Most Relevant</p>
                </div>
                <img src="images/arrow.svg" alt="arrow icon" class="ml-44">
            </div>
        </div>
    </div>
    <div class="flex gap-20">
        <div class="movie-card flex flex-col w-80 my-16">
            <img src="images/movie1.png" alt="movie 1" class="movie-1">
            <div class="mt-10">
                <div class="flex items-center justify-between">
                    <h2 class="font-bold text-3xl leading-tight">The Man from Toronto</h2>
                    <img src="images/Heart.svg" alt="heart icon">
                </div>
                <div class="flex mt-5">
                    <img src="images/Clock.svg" alt="clock icon">
                    <p class="ml-2 text-xl font-light">1h 52m</p>
                </div>
            </div>
        </div>

        <div class="movie-card flex flex-col w-80 my-16">
            <img src="images/movie2.png" alt="movie 2" class="movie-2">
            <div class="mt-10">
                <div class="flex items-center justify-between">
                    <h2 class="font-bold text-3xl leading-tight">Cara e Coragem</h2>
                    <img src="images/Heart.svg" alt="heart icon">
                </div>
                <div class="flex mt-5">
                    <img src="images/Clock.svg" alt="clock icon">
                    <p class="ml-2 text-xl font-light">S1</p>
                </div>
            </div>
        </div>

        <div class="movie-card flex flex-col w-80 my-16">
            <img src="images/movie3.png" alt="movie 3" class="movie-3">
            <div class="mt-10">
                <div class="flex items-center justify-between">
                    <h2 class="font-bold text-3xl leading-tight">Spider Man: No Way Home</h2>
                    <img src="images/Heart.svg" alt="heart icon">
                </div>
                <div class="flex mt-5">
                    <img src="images/Clock.svg" alt="clock icon">
                    <p class="ml-2 text-xl font-light">2h 28m</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Pagination -->
<section class="pagination flex justify-end mx-60">
    <div class="page-options flex gap-5 font-bold text-2xl">
        <p>Previous</p>
        <div class="flex gap-2">
            <p class="selected">1</p>
            <p>2</p>
            <p>3</p>
            <p>4</p>
            <p>5</p>
        </div>
    <p>Next</p>
    </div>
</section>
